<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="michaelpeterson.cscd372.mpetersonlab1.TwoActivies">

    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="michaelpeterson.cscd372.mpetersonlab1.TwoActivies"
        tools:showIn="@layout/activity_two_activies">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="One Question Survey"
            android:id="@+id/textViewHeading"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Name: "
            android:id="@+id/textViewFirstName"
            android:layout_marginTop="64dp"
            android:layout_below="@+id/textViewHeading"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFirstName"
            android:layout_alignTop="@+id/textViewFirstName"
            android:layout_toRightOf="@+id/textViewFirstName"
            android:width="100px"
            android:layout_alignRight="@+id/textViewHeading"
            android:layout_alignEnd="@+id/textViewHeading"
            android:contextClickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Survey"
            android:id="@+id/buttonTakeSurvey"
            android:layout_below="@+id/editTextFirstName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goto Website"
            android:id="@+id/buttonGotoWebsite"
            android:layout_centerVertical="true"
            android:layout_below="@+id/buttonTakeSurvey"
            android:layout_alignLeft="@+id/buttonTakeSurvey"
            android:layout_alignStart="@+id/buttonTakeSurvey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(results will appear here)"
            android:id="@+id/textViewResults"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/buttonGotoWebsite"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
